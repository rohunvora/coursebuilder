# Course Builder Production Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# OpenAI Configuration (set in Vercel dashboard)
# OPENAI_API_KEY=

# Database URL (set in Vercel dashboard)
# DATABASE_URL=

# Debug Mode (shows debug panel)
NEXT_PUBLIC_DEBUG_MODE=true

# Test User Mode (enables test user features)
NEXT_PUBLIC_TEST_MODE=true

# Analytics/Logging Endpoint (optional)
NEXT_PUBLIC_ANALYTICS_URL=

# Feature Flags
NEXT_PUBLIC_ENABLE_ACHIEVEMENTS=true
NEXT_PUBLIC_ENABLE_SPACED_REPETITION=true
NEXT_PUBLIC_ENABLE_CONFIDENCE_TRACKING=true